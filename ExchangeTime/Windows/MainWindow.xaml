<Window x:Class="ExchangeTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:ExchangeTime"
        TextOptions.TextFormattingMode="Display"
        FontFamily = "Verdana"
        FontSize="11"
		ShowInTaskbar="False"
		WindowStyle="None"
		ResizeMode="NoResize"
		Title="ExchangeTime"
        Width="484"
        Height="100"
        WindowStartupLocation="Manual"
        BorderThickness="2"
        Background="Black"
        BorderBrush="Gray"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        MouseLeftButtonDown="MainWindowMouseLeftButtonDown"
        MouseLeftButtonUp = "MainWindowMouseLeftButtonUp"
        MouseDoubleClick = "MainWindowMouseDoubleClick"
        MouseRightButtonDown = "MainWindowMouseRightButtonDown"
        MouseDown = "MainWindowMouseDown"
        MouseWheel = "MainWindowMouseWheel"
        KeyDown="Window_KeyDown"
        />
